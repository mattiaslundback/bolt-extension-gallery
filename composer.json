    "require": {
        "bolt/bolt": ">1.9,<3.0.0"
    },
    "license": "GPL v3+",
    "authors": [{"name": "Matthias Renner", "email": "info@blockmurder.ch"}
    ],
    "autoload": {
        "files": [
            "init.php"
        ],
